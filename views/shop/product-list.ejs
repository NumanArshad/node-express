<%- include('../includes/header.ejs') %>
</head>
<body>
    <header>
     <%- include('../includes/navigation.ejs') %>
          
           <% if(products.length) { %>
            <ul>
               <% for(let product of products) { %>
               <li>
                   <%= product.title %>
                   <form
                   action="/shop/cart/<%= product.id %>" 
                   method="POST">
                    <button
                    >
                        add to cart
                    </button>
                   </form>
                  <a href="/products/detail/<%= product.id %>">
                view detail</a>
               </li>
               <% } %>
            </ul>
           <% } else { %>
            <h1>
                no products found
            </h1>
            <% } %>

        </main>
      
    </header>

    
</body>
</html>